{
  "name": "sealer-backend",
  "version": "1.0.0",
  "main": "server.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "./postbuild.sh",
    "pre-commit": "lint-staged",
    "format": "prettier --write \"**/*.+(js|ts|json|md)\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "nyc --reporter=text ts-mocha ./**/*.spec.ts",
    "test:watch": "ts-mocha ./**/*.spec.ts -w --watch-extensions ts ",
    "ts-mocha": "./node_modules/.bin/ts-mocha",
    "tsc": "./node_modules/.bin/tsc",
    "dev": "./dev.sh",
    "serve:localhost": "./dev.sh 1",
    "serve:prod": "NODE_ENV=production ts-node-dev --respawn --transpileOnly ./src/server.ts",
    "serve:dev": "NODE_ENV=development ts-node-dev --respawn --transpileOnly ./src/server.ts",
    "serve:dev:clean": "npm run clean:db && NODE_ENV=development ts-node-dev --respawn --transpileOnly ./src/server.ts",
    "debug": "node --nolazy --inspect-brk=9229 ./dist/server.js",
    "clean:db": "rm -f src/database/db.json",
    "clean": "rm -rf dist && rm -rf node_modules && rm -f src/database/db.json && cp src/database/db_default.json src/database/db.json"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bn.js": "^4.11.5",
    "@types/chai": "^4.2.5",
    "@types/cors": "^2.8.6",
    "@types/elliptic": "^6.4.10",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/lowdb": "^1.0.9",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.9",
    "@types/sinon": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "bignumber.js": "^9.0.0",
    "chai": "^4.2.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-prettier": "^3.1.1",
    "lint-staged": "^9.4.3",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "ts-mocha": "^6.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@meck93/evote-crypto": "latest",
    "@types/dockerode": "^2.5.20",
    "axios": "^0.19.0",
    "bn.js": "^5.0.0",
    "cors": "^2.8.5",
    "dockerode": "^3.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "lodash": "^4.17.20",
    "lowdb": "^1.0.0",
    "web3": "^1.2.4"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "*.tsx": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "all": true
  }
}
