{
  "name": "identity-provider-backend",
  "version": "1.0.0",
  "main": "server.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "./postbuild.sh",
    "clean:db": "rm -f src/database/db.json",
    "clean": "rm -rf dist && rm -rf node_modules && rm -f src/database/db.json && cp src/database/db_default.json src/database/db.json",
    "pre-commit": "lint-staged",
    "test": "nyc --reporter=text ts-mocha ./**/*.spec.ts",
    "test:watch": "ts-mocha ./**/*.spec.ts -w --watch-extensions ts ",
    "format": "prettier --write \"**/*.+(js|ts|json|md)\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "ts-mocha": "./node_modules/.bin/ts-mocha",
    "tsc": "./node_modules/.bin/tsc",
    "serve:localhost": "./dev.sh",
    "serve:dev:clean": "npm run clean:db && NODE_ENV=development ts-node-dev --respawn --transpileOnly ./src/server.ts",
    "debug": "node --nolazy --inspect-brk=9229 ./dist/server.js"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.2",
    "bn.js": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.17",
    "lowdb": "^1.0.0"
  },
  "devDependencies": {
    "@types/bn.js": "^4.11.6",
    "@types/chai": "^4.2.11",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/lowdb": "^1.0.9",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.30",
    "@types/sinon": "^7.5.2",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "ts-mocha": "^6.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "all": true
  }
}
